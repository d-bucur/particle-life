{
    "version": "2.0.0",
    "command": "",
    "args": [],
    "tasks": [
        {
            "label": "odin run",
            "type": "shell",
            "command": "odin run source/main_desktop ",
            "group": "build"
        },
        {
            "label": "build-debug",
            "type": "shell",
            "command": "odin build source/main_desktop -debug -out:build/desktop/game_desktop.bin",
            "group": "build"
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "./build_desktop.sh",
            "group": "build"
        },
        {
            "label": "check",
            "type": "shell",
            "command": "odin check source/main_desktop -vet -strict-style",
            "group": "build"
        },
        {
            "label": "run web",
            "type": "shell",
            "command": "./build_web.sh && python3 -m http.server --directory build/web",
            "group": "build"
        },
    ]
}